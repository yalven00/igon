					<li><%= link_to('Messages', { :action => "home" }) %></li>
					<li><%= link_to image_tag("internal_profile_icon_eric.jpg", :border=>0, :size => "35x35"), { :action => "home" }, :class => "profile_icon" %></li>
					<li><%= link_to({ :action => "user_login" }, :class => "last", :id=>"my_account_link") do %>
