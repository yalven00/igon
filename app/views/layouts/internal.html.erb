									<p class="bottom"><%= image_tag('get_hands.png', :size => "23x23", :class => "rightfloat") %><%= image_tag('mike.png', :class => "leftfloat profile", :size => "23x23") %></p></div>
						</div>
					</div>	
				</div>		
			</div>	
			<ul>
				<li class="log_out"><h4><%= link_to(:controller => 'access', :action => 'logout') do %><%= image_tag('my_account_menu_logout.png') %> Log Out<% end %></h4></li>
