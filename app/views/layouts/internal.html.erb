<body class="internal <%= action_name %> <%= controller_name %>">

	<header>
    	<div class="clearfix">
			<%= link_to image_tag("internal_logo.jpg", :border=>0, :size=>"156x54"), {:action => 'home'}, :id => "logo" %>
			<nav>
				<ul>
					<!--<li><%= link_to('Communities', { :action => "home" }) %></li>-->
