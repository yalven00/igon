<div id="main_head"><h1>My Account</h1><%= link_to('Save and Go Home', { :action => "home" }) %></div>

<%= render(:partial => "nav") %>

<section id="main_holder" class="blue_top">

    <section class="clearfix blue_wraparound">
    <%= image_tag('blue_top_left_wrap.jpg', :class => 'blue_top_left_wrap') %>
    <%= image_tag('blue_top_right_wrap.jpg', :class => 'blue_top_right_wrap') %>
        <div class="text_container">
            <h3 class="head_main">Public Profile</h3>
        </div>
    </section>

  <%= form_for(@account_user, :url => {:action => 'update'}, :html => {:multipart => true, :id => ""}) do |f| %>

    <%= f.fields_for :profile do |t| %>

    <div class="top_container clearfix">
      <h3><%= image_tag('one.png') %>Create Bio</h3>
        <div class="indent first_col">
          <p>This will be the first thing somebody reads about you, so make it count.</p>
        </div>
        <div class="second_col">
          <%= t.text_area(:bio, :id => '') %>
        </div>
    </div>

    <div class="top_container clearfix">
      <h3 class="clear"><%= image_tag('two.png') %>Upload Profile Picture(s)</h3>
        <div class="indent first_col">
          <p>Everyone can upload a profile picture. This picture can be in various formats (i.e. png, jpg, bmp, gif) and cannot be larger than 500k. The optimal size is 300 x 300 px. Each picture is reviewed prior to activation and must conform to the terms of use.</p>
        </div>
        <div class="second_col">
          <%= image_tag @account_user.profile.main_pic_url.to_s if !@account_user.profile.main_pic.blank? %>
          <%= t.file_field :main_pic %>
        </div>
    </div>

    <h3 class="clear"><%= image_tag('three.png') %>Upload Profile Video</h3>
      <div class="indent first_col">
        <p>Everyone can upload a profile video. Please make sure your webcam is turned on and click "Upload Video" to the right. Created videos are limited to 45 seconds. Each video is reviewed prior to activation and must conform to the terms of use.</p>
      </div>
      <div class="second_col">
        <textarea></textarea>
      </div>
    <div>

    <% end %>

    <%= submit_tag("submit", :id => 'submit_my_account') %>

  <% end %>

</section>

