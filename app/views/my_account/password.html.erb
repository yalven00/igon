<div id="main_head"><h1>My Account</h1><%= link_to('Save and Go Home', { :action => "home" }) %></div>

<%= render(:partial => "nav") %>

<section id="main_holder" class="blue_top">

    <section class="clearfix blue_wraparound">
    <%= image_tag('blue_top_left_wrap.jpg', :class => 'blue_top_left_wrap') %>
    <%= image_tag('blue_top_right_wrap.jpg', :class => 'blue_top_right_wrap') %>
        <div class="text_container">
            <h3 class="head_main">Password</h3>
        </div>
    </section>

  <%= form_for(@account_user, :url => {:action => 'update'}, :validate => true, :html => {:id => ''}) do |f| %>
    <div class="top_container">
      <h3><%= image_tag('one.png') %>Password Retrieval</h3>
      <div class="indent">
        <p><%= link_to('Forgot Password?') %></p>
      </div>
    </div>

    <h3><%= image_tag('two.png') %>Update Password</h3>
      <div class="indent">
        <p><%= f.password_field(:password, :id => 'password', :placeholder => 'Password') %></p>
        <p><%= f.password_field(:password_confirmation, :id => 'password_confirmation', :placeholder => 'Confirm Password') %></p>
      </div>
      <%= submit_tag("submit", :id => 'submit_my_account') %>
    <% end %>

</section>
