<div id="main_head"><h1>My Account</h1><%= link_to('Save and Go Home', { :action => "home" }) %></div>

<%= render(:partial => "nav") %>

<section id="main_holder" class="blue_top">

    <section class="clearfix blue_wraparound">
    <%= image_tag('blue_top_left_wrap.jpg', :class => 'blue_top_left_wrap') %>
    <%= image_tag('blue_top_right_wrap.jpg', :class => 'blue_top_right_wrap') %>
        <div class="text_container">
            <h3 class="head_main">Merchant Account</h3>
        </div>
    </section>

  <%= form_for(@account_user, :url => {:action => 'merchant_account'}, :html => {:id => 'contact_form'}) do |f| %>
    <div class="top_container clearfix">
      <h3><%= image_tag('one.png') %>Personal Details</h3>
        <div class="indent">
          <p><%= text_field(:secondary_email, "", {:class => 'address', :placeholder => 'First Name'}) %><%= text_field(:secondary_email2, "", {:class => 'address', :placeholder => 'Last Name'}) %></p>
          <p><%= text_field(:secondary_email, "", {:class => 'address', :placeholder => 'Address Line 1'}) %><%= text_field(:secondary_email2, "", {:class => 'address', :placeholder => 'Address Line 2'}) %></p>
          <p><%= text_field(:secondary_email, "", {:id => 'city', :placeholder => 'City'}) %><%= text_field(:secondary_email, "", {:id => 'state', :placeholder => 'State'}) %><%= text_field(:secondary_email, "", {:id => 'zip', :placeholder => 'Zip'}) %></p>
        </div>
      <h3><%= image_tag('two.png') %>Address</h3>
      <div class="indent">
        <p><%= text_field(:secondary_email, "", {:id => 'credit_card', :placeholder => 'Credit Card Number (no spaces)'}) %></p>
        <p><%= text_field(:secondary_email, "", {:class => 'address', :placeholder => 'Expiration Date'}) %><%= text_field(:secondary_email2, "", {:class => 'address', :placeholder => 'Security Code'}) %></p>
      </div>
      <%= submit_tag("submit", :id => 'submit_my_account') %>
    <% end %>

</section>